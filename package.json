{
  "name": "construction-cart-backend",
  "version": "1.0.0",
  "main": "functions/index.js",
  "engines": {
    "node": "18"
  },
  "scripts": {
    "start": "npm --prefix functions start",
    "dev": "nodemon functions/index.js",
    "install:functions": "cd functions && npm install",
    "setup": "npm install && npm --prefix functions install",
    "start:local": "npm run setup && firebase emulators:start --only functions",
    "emulate": "firebase emulators:start --only functions",
    "deploy:functions": "firebase deploy --only functions",
    "build": "npm --prefix functions install",
    "serve": "npm run setup"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "firebase-admin": "^11.11.0",
    "firebase-functions": "^4.4.0",
    "exceljs": "^4.3.0",
    "dotenv": "^16.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.11"
  },
  "build": {
    "builder": "nixpacks"
  },
  "deploy": {
    "startCommand": "npm run deploy:functions"
  }
}
